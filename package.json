{
  "name": "@isic/client",
  "version": "0.0.0",
  "description": "A client library for authenticating with the ISIC Archive from an SPA (single page application).",
  "author": "Kitware, Inc. <kitware@kitware.com>",
  "license": "Apache-2.0",
  "main": "dist/isic-client.js",
  "types": "dist/isic-client.d.ts",
  "files": [
    "/src/",
    "/dist/"
  ],
  "scripts": {
    "lint": "eslint ./src/**.ts",
    "watch": "tsc --watch",
    "build:clean": "rimraf ./dist",
    "build:compile": "tsc",
    "build": "npm-run-all build:clean build:compile",
    "prepack": "npm-run-all build"
  },
  "dependencies": {
    "@girder/oauth-client": "^0.7.6"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "airbnb-typescript/base"
    ],
    "rules": {
      "no-restricted-syntax": 0,
      "no-console": [
        "warn",
        {
          "allow": [
            "error"
          ]
        }
      ]
    }
  }
}
